<?xml version="1.0" encoding="utf-8"?>

<web-app>

    <display-name>Distributed Image Rendering Engine</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlet.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Info Servlet -->
    <servlet>
        <servlet-name>Info</servlet-name>
        <servlet-class>servlet.Info</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>

    <!-- Create servlet-->
    <servlet>
        <servlet-name>Create</servlet-name>
        <servlet-class>servlet.Create</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <!-- Rendering Servlet -->
    <servlet>
        <servlet-name>Rendering</servlet-name>
        <servlet-class>servlet.Rendering</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Rendering</servlet-name>
        <url-pattern>/rendering</url-pattern>
    </servlet-mapping>

    <!-- Finished Servlet -->
    <servlet>
        <servlet-name>Finished</servlet-name>
        <servlet-class>servlet.Finished</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Finished</servlet-name>
        <url-pattern>/finished</url-pattern>
    </servlet-mapping>

    <!-- Finished Servlet -->
    <servlet>
        <servlet-name>Help</servlet-name>
        <servlet-class>servlet.Help</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Help</servlet-name>
        <url-pattern>/help</url-pattern>
    </servlet-mapping>
</web-app>

